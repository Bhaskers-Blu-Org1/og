#!/bin/sh

ULIMIT=4096
MEMORY=2048

if [ "x${OG_ULIMIT}" != "x" ]; then
	ULIMIT=${OG_ULIMIT}
fi

if [ "x${OG_MEMORY}" != "x" ]; then
	MEMORY=${OG_MEMORY}
fi

ulimit -n ${ULIMIT}

BASE=`dirname ${0}`
CP=${BASE}/lib/*:${BASE}/conf/log4j/og/:${BASE}/conf/
CLASS="com.cleversafe.og.cli.ObjectGenerator"

# TODO analyze which jvm parameters should be set
VMOPTS="-XX:+PrintGCDetails -XX:+PrintGCDateStamps -Xloggc:log/gc.log -XX:+UseParallelOldGC -XX:+UseCompressedOops -XX:MaxGCPauseMillis=5000 -Xss256k -Xmx${MEMORY}m -Xms${MEMORY}m -XX:MaxDirectMemorySize=${MEMORY}m"
SYSTEMOPTS="-Dlog4j.configurationFile=og-log4j2.xml"

exec java -cp ${CP} ${VMOPTS} ${SYSTEMOPTS} ${CLASS} "$@"
