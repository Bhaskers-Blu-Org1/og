<?xml version="1.0" encoding="UTF-8"?>
<Configuration shutdownHook="disable">
	<Properties>
		<Property name="log_path">log/${sys:log_datetime}</Property>
		<Property name="application.log">application.log</Property>
		<Property name="request.log">request.log</Property>
		<Property name="config.json">config.json</Property>
		<Property name="summary.json">summary.json</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%m%n" />
		</Console>
		<RollingRandomAccessFile name="ApplicationLog" append="true"
			fileName="${log_path}/${application.log}"
			filePattern="${log_path}/${application.log}-%i.gz">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] %l - %m%n"/>
			<SizeBasedTriggeringPolicy size="100MB" />
			<DefaultRolloverStrategy max="20"/>
		</RollingRandomAccessFile>
		<RollingRandomAccessFile name="RequestLog" append="true"
			fileName="${log_path}/${request.log}"
			filePattern="${log_path}/${request.log}-%i.gz">
			<PatternLayout pattern="%m%n" />
			<SizeBasedTriggeringPolicy size="100MB" />
			<DefaultRolloverStrategy max="20"/>
		</RollingRandomAccessFile>
		<File name="ConfigJson" append="true" fileName="${log_path}/${config.json}">
			<PatternLayout pattern="%m%n" />
		</File>
		<File name="SummaryJson" append="true" fileName="${log_path}/${summary.json}">
			<PatternLayout pattern="%m%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="RequestLogger" level="info" additivity="false">
			<AppenderRef ref="RequestLog" />
		</Logger>
		<Logger name="ConfigJsonLogger" level="info" additivity="false">
			<AppenderRef ref="ConfigJson" />
		</Logger>
		<Logger name="SummaryJsonLogger" level="info" additivity="false">
			<AppenderRef ref="SummaryJson" />
		</Logger>
		<Logger name="com.cleversafe.og.cli.OG" level="info">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="com.cleversafe.og.cli.OGReader" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="org.apache.http.wire" level="error"/>
		<Logger name="org.apache.http.headers" level="error"/>
		<Root level="debug">
			<AppenderRef ref="ApplicationLog" />
		</Root>
	</Loggers>
</Configuration>
