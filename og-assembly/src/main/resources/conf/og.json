{
// config.sample.json is a json-formatted test configuration file for the OG
// tool. See http://www.json.org/ for more details regarding the json format.
//
// All required fields are uncommented. Each optional field is present but
// commented out, and contains a configuration line showing its respective
// default value.
//
// Note: All configuration names are strings and must be quoted e.g. "scheme"


// The http scheme to use. One of ("http", "https")

// "scheme": "http",


// A list of hosts to use.
//
// Example1 "host": "192.168.8.10"
// Example2 "host": ["dc-a2100-3838.cleversafelabs.com", "10.10.1.56"]
// Example3 "host": [{"host": "dc-a2100-3838.cleversafelabs.com", "weight": 5.0}, "10.10.1.56"]
// Example4 "host": {"selection": "roundrobin", "choices": ["dc-a2100-3838.cleversafelabs.com", "10.10.1.56"]}

"host": "",


// The http port to use.

// "port": 80,


// The object api to use. One of ("soh", "s3", "openstack", "webdav") 

// "api": "soh",


// The path at which the root of the object api resides. Object apis can be
// rooted at arbitrary base paths.
//
// Example1 "uri_root": "/"
// Example2 "uri_root": "/soh/"

// "uri_root": "/<api>/", // where <api> is the api under test


// The container to use.

"container": "",


// Request headers to set for every request.
//
// Example1 (s3 canned object acl):
// "headers": {
//	"x-amz-acl": "public-read"
// }

// "headers": {},


// Write operation configuration

// "write": 100.0,
//
// or
//
// "write": {
// "weight": 100.0,
// "host_selection": "roundrobin",
// "host": [],
// "headers": {}
// },


// Read operation configuration

// "read": 0.0,
//
// or
//
// "read": {
// "weight": 0.0,
// "host_selection": "roundrobin",
// "host": [],
// "headers": {}
// },


// Delete operation configuration

// "delete": 0.0,
//
// or
//
// "delete": {
// "weight": 0.0,
// "host_selection": "roundrobin",
// "host": [],
// "headers": {}
// },


// File size(s) to use for write operations. File sizes are described in terms
// of a mathematical distribution. If multiple distributions are configured, a
// distribution is randomly selected on a per-request basis based on the
// weights of each configured distribution.
//
// Distribution is one of ("uniform", "normal", "lognormal")
//
// Example1 A single, constant file size of 15.5 mebibytes
// "filesize": 15.5,
//
// Example2 A single, constant file size of 10 kilobytes.
// "filesize": {
// "average": 10,
// "average_unit": "kb"
// },
//
// Example3 Multiple file sizes
// "filesize": [{"average": 5.5, "average_unit": "kb", "weight": 2.0}, 75.0]

// "filesize": {
// "distribution": "uniform",
// "average": 5.0,
// "average_unit": "mebibytes",
// "spread": 0.0,
// "spread_unit": "mebibytes",
// "weight": 1
// },


// The generated data to use for writes. One of ("random", "zeroes")

// "data": "random",


// The type of concurrency to use. One of ("ops", "threads").
// the distribution to use for ops testing. One of ("uniform", "poisson").
//
// "concurrency": {
// "type": "threads",
// "distribution": "uniform",
// "count": 1,
// "rampup": 0.0,
// "rampup_unit": "seconds"
// },


// The credentials to use for the test. If username is set, password must
// also be set.
//
// "type" is one of ("basic", "awsv2", "awsv4").

// "authentication": {
// "type": "basic",
// "aws_chunked": false,
// "username": "",
// "password": "",
// "chunkSize": 64000
// },


// Advanced client configuration options
