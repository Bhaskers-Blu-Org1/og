<?xml version="1.0"?>
<jsap>
  <parameters>
      <switch>
            <id>write</id>
            <shortFlag>w</shortFlag>
            <longFlag>write</longFlag>
            <help>Read plain text source and output in object file format</help>
        </switch>
        <switch>
            <id>read</id>
            <shortFlag>r</shortFlag>
            <longFlag>read</longFlag>
            <help>Read object source and output in plain text file format</help>
        </switch>
        <switch>
            <id>filter</id>
            <shortFlag>f</shortFlag>
            <longFlag>filter</longFlag>
            <help>Filter an existing object file source and output in object file format</help>
        </switch>
        <flaggedOption>
            <id>min-filesize</id>
            <longFlag>min-filesize</longFlag>
            <stringParser>
            <classname>LongStringParser</classname>
            </stringParser>
            <defaults>
                <string>0</string>
            </defaults>
            <help>Minimum file size to include an object in the output when using --filter, in bytes</help>
        </flaggedOption>
        <flaggedOption>
            <id>max-filesize</id>
            <longFlag>max-filesize</longFlag>
            <stringParser>
            <classname>LongStringParser</classname>
            </stringParser>
            <defaults>
                <string>9223372036854775807</string>
            </defaults>
            <help>Maximum file size to include an object in the output when using --filter, in bytes</help>
        </flaggedOption>
        <flaggedOption>
            <id>min-suffix</id>
            <longFlag>min-suffix</longFlag>
            <stringParser>
            <classname>IntegerStringParser</classname>
            </stringParser>
            <defaults>
                <string>-1</string>
            </defaults>
            <help>Minimum container suffix to include an object in the output when using --filter</help>
        </flaggedOption>
        <flaggedOption>
            <id>max-suffix</id>
            <longFlag>max-suffix</longFlag>
            <stringParser>
            <classname>IntegerStringParser</classname>
            </stringParser>
            <defaults>
                <string>2147483647</string>
            </defaults>
            <help>Maximum container suffix to include an object in the output when using --filter</help>
        </flaggedOption>
        <switch>
            <id>upgrade</id>
            <shortFlag>u</shortFlag>
            <longFlag>upgrade</longFlag>
            <help>Upgrade an oom bin file to an og object file</help>
        </switch>
        <switch>
            <id>split</id>
            <shortFlag>s</shortFlag>
            <longFlag>split</longFlag>
            <help>Split the output of a --write, --filter, or --split call into one or more object files. object file name prefix is determined by --output</help>
        </switch>
        <flaggedOption>
            <id>split-size</id>
            <longFlag>split-size</longFlag>
            <stringParser>
            <classname>IntegerStringParser</classname>
            </stringParser>
            <defaults>
                <string>-1</string>
            </defaults>
            <help>Maximum file size to use when using the --split option with --split-size</help>
        </flaggedOption>
        <flaggedOption>
            <id>output</id>
            <shortFlag>o</shortFlag>
            <longFlag>output</longFlag>
            <help>A relative or absolute path to an output file, rather than stdout</help>
        </flaggedOption>
    <switch>
      <id>version</id>
      <shortFlag>v</shortFlag>
      <longFlag>version</longFlag>
      <help>Prints the og-reader version and exits</help>
    </switch>
    <switch>
      <id>help</id>
      <shortFlag>h</shortFlag>
      <longFlag>help</longFlag>
      <help>Prints this help and exits</help>
    </switch>
    <unflaggedOption>
            <id>input</id>
            <stringParser>
            <classname>FileStringParser</classname>
            </stringParser>
            <help>A relative or absolute path to an input file, rather than stdin</help>
        </unflaggedOption>
  </parameters>
</jsap>
